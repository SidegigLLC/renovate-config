{
  "extends": [
    "config:js-app",
    "group:linters",
    "group:unitTest",
    "npm:unpublishSafe",
    ":rebaseStalePrs",
    ":label(renovate)",
    ":timezone(America/New_York)",
    ":automergeTesters",
    ":automergeLinters",
    ":automergeTypes",
    ":automergeMinor",
    ":automergePatch",
    ":automergeBranch",
    ":enableVulnerabilityAlerts"
  ],
  "prCreation": "not-pending",
  "prConcurrentLimit": 2,
  "branchConcurrentLimit": 2,
  "major": {
    "dependencyDashboardApproval": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["before 2am on the first day of the month"]
  },
  "schedule": [
    "before 6am every weekday",
    "after 8pm every weekday",
  ],
  "minimumReleaseAge": 3,
  "packageRules": [
    {
      "groupName": "Zodios",
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["@zodios"]
    },
    {
      "groupName": "Stripe",
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["@stripe"]
    },
    {
      "groupName": "Radix UI",
      "matchDatasources": ["npm"],
      "matchPackagePatterns": ["@radix-ui"]
    },
    {
      "groupName": "MUI X",
      "matchSourceUrls": ["https://github.com/mui/mui-x"]
    },
    {
      "groupName": "Next.js",
      "matchSourceUrls": ["https://github.com/vercel/next.js"]
    }
  ]
}
